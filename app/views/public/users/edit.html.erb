<div class="container">
  <h1 class="h3 mb-3 text-center">プロフィール編集</h1>

  <%= form_with(model: @user, url: user_path(@user), method: :patch, local: true) do |form| %>
    <% if @user.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(@user.errors.count, "error") %> 禁止されています:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <label for="inputname">Name</label>
      <%= form.text_field :name, class: 'form-control', placeholder: '名前' %>
    </div>

    <div class="form-group">
      <label for="profile_image">Profile Image</label>
      <%= form.file_field :profile_image, accept: "image/*", class: 'form-control-file' %>
    </div>

    <div class="form-row text-center">
      <div class="col">
        <%= link_to '戻る', users_path, class: "btn btn-lg btn-secondary btn-block" %>
      </div>
      <div class="col">
        <%= form.submit "更新する", class: "btn btn-lg btn-primary btn-block" %>
      </div>
    </div>
  <% end %>
</div>
