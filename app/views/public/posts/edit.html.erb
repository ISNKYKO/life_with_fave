<h1>編集画面</h1>

  <%= form_with(model: @post, local: true) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> 禁止されています:</h2>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
   <%= form.label :image %>
   <%= form.file_field :image, accept: "image/*" %>
  </div>

  <div class="field">
    <%= form.label :post_title %>
    <%= form.text_field :post_title %>
  </div>

  <div class="field">
    <%= form.label :post_text %>
    <%= form.text_area :post_text %>
  </div>

  <div class="actions">
    <%= form.submit "更新する" %>
  </div>
<% end %>

<%= link_to '戻る', posts_path %>