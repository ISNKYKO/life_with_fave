  <div class="container">
    <h1 class="h3 mb-3 text-center">投稿ホーム</h1>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <p><%= @post.errors.count %>件のエラーが発生しました</p>
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @post, url: posts_path, local: true, multipart: true do |f| %>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, accept: "image/*" %>
      </div>

      <div class="form-group">
        <%= f.label :post_title %>
        <%= f.text_field :post_title, class: 'form-control', placeholder: 'タイトル' %>
      </div>

      <div class="form-group">
        <%= f.label :post_text %>
        <%= f.text_area :post_text, class: 'form-control', placeholder: 'テキスト' %>
      </div>
      
      <div class="form-group">
        <%= f.text_field :zipcode, class: "form-control", placeholder: "郵便番号", id: "zipcode" %>
        <%= f.text_field :address, class: "form-control", placeholder: "住所", id: "post_address" %>
      </div>

      <div class="form-group">
        <%= f.label :tag_list %>
        <%= f.text_field :tag_list, value: @post.tags.map(&:name).join(', '), class: 'form-control', placeholder: 'タグ' %>
      </div>

      <div class="form-row">
        <div class="actions">
          <%= f.submit '公開', class: 'btn btn-lg btn-secondary', name: 'commit' %>
          <%= f.submit '下書き保存', class: 'btn btn-lg btn-secondary', name: 'commit' %>
        </div>
      </div>
    <% end %>
  </div>

<%= javascript_pack_tag "jpostal",  'data-turbolinks-track': 'reload' %>





