<h1>画像投稿フォーム</h1>

<% if @post.errors.any? %>
  <div id="error_explanation">
    <p><%= @post.errors.count %>件のエラーが発生しました</p>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= simple_form_for @post, html: { multipart: true } do |f| %>
  <div class="field">
    <h4>画像</h4>
    <%= f.input :image, as: :file, input_html: { accept: "image/*" } %>
  </div>

  <div class="field">
    <h4>ショップ名</h4>
    <%= f.input :post_title %>
  </div>

  <div class="field">
    <h4>説明</h4>
    <%= f.input :post_text, as: :text %>
  </div>

  <div class="field">
    <h4>タグ</h4>
    <%= f.input :tag_list, input_html: { value: @post.tags.map(&:name).join(', ') } %>
  </div>

  <div class="actions">
    <%= f.button :submit, '公開' %>
    <%= f.button :submit, '下書き保存', name: 'commit' %>
  </div>
<% end %>
