<main class="mb-auto">
  <h1>ドラフト一覧</h1>

  <% @draft_posts.each do |post| %>
    <div class="post">
      <%= link_to post_path(post.id) do %>
        <%= image_tag post.get_image %>
      <% end %>
      <p>投稿ユーザー画像：<%= image_tag post.user.get_profile_image(100, 100) %></p>
      <p>タイトル：<%= post.post_title %></p>
      <p>説明：<%= post.post_text %></p>
      <p>ユーザーネーム：<%= post.user.name %></p>
      <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>

      <h2><%= link_to post.post_title, post %></h2>
      <p><%= post.post_text %></p>
      <p>
        <% post.tags.each do |tag| %>
          <%= link_to tag.name, tag_path(tag.name) %>
        <% end %>
      </p>
    </div>
  <% end %>
</main>