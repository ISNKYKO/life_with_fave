<h1>投稿一覧</h1>

<%= form_with url: admin_posts_path, method: :get, local: true do %>
  <%= label_tag :search, "検索" %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "検索" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>内容</th>
      <th>ユーザー</th>
      <th>作成日</th>
      <th>アクション</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.post_title %></td>
        <td><%= post.post_text %></td>
        <td><%= post.user.name %></td>
        <td><%= post.created_at %></td>
        <td>
          <%= link_to '削除', admin_post_path(post), method: :delete, data: { confirm: '本当に削除しますか？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
