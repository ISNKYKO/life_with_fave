    <style>
        .text-center {
            padding: 100px 0;
        }
        .logo {
            font-size: 36px;
            font-weight: bold;
        }
        .login-form-1 {
            max-width: 400px;
            margin: auto;
        }
        .main-login-form {
            padding: 20px;
            background: #f7f7f7;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            border-radius: 5px;
            opacity: 0.8; 
        }
        .login-button {
            background-color: #007bff;
            border: none;
            color: white;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
        }
        .login-button:hover {
            background-color: #0056b3;
        }
        .etc-login-form {
            margin-top: 10px;
        }
        .login-group-checkbox {
            margin: 10px 0;
        }
    </style>
    
<div class="bg-image d-flex flex-column vh-100" style="background-image: url('<%= asset_path('22130454.jpg') %>'); background-size: cover; background-position: center 60%;">

<div class="text-center">
    <div class="logo">Sign up</div>
    <!-- Main Form -->
    <div class="login-form-1">
        <%= form_with model: @user, url: user_registration_path, local: true, html: { class: 'text-left' } do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
            <div class="login-form-main-message"></div>
            <div class="main-login-form">
                <div class="login-group">
                    <div class="form-group">
                        <%= f.label :name, class: 'sr-only' %>
                        <%= f.text_field :name, class: 'form-control', id: 'lg_name', placeholder: 'name', autofocus: true %>
                    </div>
                    <div class="form-group">
                        <%= f.label :email, class: 'sr-only' %>
                        <%= f.email_field :email, class: 'form-control', id: 'lg_email', placeholder: 'email', autocomplete: 'email' %>
                    </div>
                    <div class="form-group">
                        <%= f.label :telephone_number, class: 'sr-only' %>
                        <%= f.text_field :telephone_number, class: 'form-control', id: 'lg_telephone_number', placeholder: 'telephone number' %>
                    </div>
                    <div class="form-group">
                        <%= f.label :password, class: 'sr-only' %>
                        <%= f.password_field :password, class: 'form-control', id: 'lg_password', placeholder: 'password', autocomplete: 'new-password' %>
                    </div>
                    <div class="form-group">
                        <%= f.label :password_confirmation, class: 'sr-only' %>
                        <%= f.password_field :password_confirmation, class: 'form-control', id: 'lg_password_confirmation', placeholder: 'confirm password', autocomplete: 'new-password' %>
                    </div>
                </div>
                <button type="submit" class="login-button"><i class="fa fa-chevron-right"></i> Sign up</button>
            </div>
            <div class="etc-login-form">
                <p>Already have an account? <%= link_to 'Log in here', new_session_path(resource_name) %></p>
            </div>
        <% end %>
    </div>
    <!-- end:Main Form -->
</div>
</div>